<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE rca SYSTEM "../devicefile.dtd">
<modm version="1.0">
  <device platform="hosted" family="linux">
    <naming-schema>{platform}-{family}</naming-schema>

    <attribute-core value="x86"/>

    <driver type="can" compatible="socketcan"/>
    <driver type="can" compatible="canusb"/>
    <driver type="core" compatible="hosted"/>
    <driver type="graphics" compatible="hosted"/>
    <driver type="uart" compatible="hosted"/>
    <driver type="uart" compatible="posix"/>
  </device>
</modm>
