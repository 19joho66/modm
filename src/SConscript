
DIRS = """
	communication
	debug
	math
"""

Import('env')
Import('options')

dirOptions = options
objects = []
for dir in Split(DIRS):
	options = dirOptions.get(dir, {})
	object = SConscript(dir + '/SConscript',
						exports=['env', 'options'])
	objects.append(object)

library = env.Library(target='robot', source=objects)

env.Default(library)
env.Alias('lib', library)

Return('library')
