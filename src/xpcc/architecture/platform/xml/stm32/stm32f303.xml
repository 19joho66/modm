<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE rca SYSTEM "../devicefile.dtd">
<rca version="1.0">
	<device platform="stm32" family="f3" name="303">
		<!-- Flash and RAM sizes -->
		<flash device-size-id="b">131072</flash>
		<flash device-size-id="c">262144</flash>
		<ram>40960</ram>
		<!-- Linker Script -->
		<linkerscript device-size-id="b">stm32f3xx_b.ld</linkerscript>
		<linkerscript device-size-id="c">stm32f3xx_c.ld</linkerscript>
		<!-- Core -->
		<core>cortex-m4</core>
		<!-- Number of pins -->
		<pin-count device-pin-id="c">48</pin-count>
		<pin-count device-pin-id="r">64</pin-count>
		<pin-count device-pin-id="v">100</pin-count>
		<!-- Headers to be included with the {{ include_device_headers }} substitution-->
		<header>stm32f30x.h</header>
		<!-- Cpp Defines -->
		<define>__ARM_STM32__</define>
		<define>STM32F3XX</define>
		<define>STM32F30X</define>
		<define>__STM32F303__</define>
		<define>STM32_AHB_FREQUENCY  = 72000000</define>
		<define>STM32_APB1_FREQUENCY = 36000000</define>
		<define>STM32_APB2_FREQUENCY = 72000000</define>
		<define>CORTEX_VECTORS_RAM = 0</define>
		<define>CORTEX_ENABLE_HARD_FAULT_HANDLER = 0</define>
		<!-- Core Driver -->
		<driver type="core" name="cortex">
			<parameter name="allocator">newlib</parameter>
		</driver>
		<!-- Peripheral Drivers -->
		<driver type="clock" name="stm32" /> <!-- the clock peripheral does not need the instances attribute because there is only one instance -->
		<driver type="uart" name="stm32" instances="1,2,3,4,5" />
		<!-- <driver type="timer" name="stm32" instances="1,2,3,4,8" /> -->
		<driver type="gpio" name="stm32_af">
			<gpio port="A" id="0"></gpio>
			<gpio port="A" id="8">
				<af id="0" peripheral="MCO" description="Clock Output"/>
			</gpio>
			<gpio port="A" id="2">
				<af id="7" peripheral="UsartHal2" description="Tx" type="output"/>
			</gpio>
			<gpio port="A" id="3">
				<af id="7" peripheral="UsartHal2" description="Rx" type="input"/>
			</gpio>
			<gpio port="A" id="9">
				<af id="7" peripheral="UsartHal1" description="Tx" type="output"/>
				<af id="7" peripheral="Usart1" description="Tx" type="output"/>
			</gpio>
			<gpio port="A" id="10">
				<af id="7" peripheral="UsartHal1" description="Rx" type="input"/>
				<af id="7" peripheral="Usart1" description="Rx" type="input"/>
			</gpio>
			<gpio port="B" id="10">
				<af id="7" peripheral="UsartHal3" description="Tx" type="output"/>
			</gpio>
			<gpio port="B" id="11">
				<af id="7" peripheral="UsartHal3" description="Rx" type="input"/>
			</gpio>
			<gpio port="E" id="8"  pin-count="100+"></gpio>
			<gpio port="E" id="9"  pin-count="100+"></gpio>
			<gpio port="E" id="10" pin-count="100+"></gpio>
			<gpio port="E" id="11" pin-count="100+"></gpio>
			<gpio port="E" id="12" pin-count="100+"></gpio>
			<gpio port="E" id="13" pin-count="100+"></gpio>
			<gpio port="E" id="14" pin-count="100+"></gpio>
			<gpio port="E" id="15" pin-count="100+"></gpio>
		</driver>
	</device>
</rca>
