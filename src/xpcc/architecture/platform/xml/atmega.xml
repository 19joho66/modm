<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE rca SYSTEM "../devicefile.dtd">
<rca version="1.0">
	<device platform="avr" family="atmega" name="48|88|168|328">
		<!-- _flash_, _pin-count-, _define_, -core_ and _peripheral nodes
		     accept pin-id/size-id properties if they only apply to a specific
		     size/pin id
		     Furthermore for _define_, _peripheral_ and _gpio_
		     nodes you can use the pin-copunt property if they are only
		     available on a device with a specific pin count. Add a _+_
		     to mean "and more" / a _-_ to mean "and less"
		-->
		<!-- Flash and RAM sizes -->
		<flash device-name="48">4096</flash>
		<flash device-name="88">8192</flash>
		<flash device-name="168">16384</flash>
		<flash device-name="328">32768</flash>
		
		<ram device-name="48">512</ram>
		<ram device-name="88">1024</ram>
		<ram device-name="168">1024</ram>
		<ram device-name="328">2048</ram>
		
		<eeprom device-name="48">256</eeprom>
		<eeprom device-name="88">512</eeprom>
		<eeprom device-name="168">512</eeprom>
		<eeprom device-name="328">1024</eeprom>
		
		<!-- Number of pins -->
		<pin-count pin-id="mmh|mmhr|pu|mmn|mmnr|pn">28</pin-count>
		<pin-count pin-id="au|aur|ccu|ccur|mu|mur|an|anr|mn|mnr">32</pin-count>
		<!-- Headers to be included with the {{ include_device_headers }} substitution-->
		<header>avr/io.h</header>
		<header>avr/interrupt.h</header>
		<header>avr/sleep.h</header>
		<!-- Cpp Defines -->
		<define>__AVR__</define> <!-- just a name implies a value of 1 -->
		<define device-name="48">__AVR_ATmega48__</define>
		<define device-name="88">__AVR_ATmega88__</define>
		<define device-name="168">__AVR_ATmega168__</define>
		<define device-name="328">__AVR_ATmega328__</define>
		
		<driver type="gpio" name="atmega">
			<gpio port="B" id="0"></gpio>
			<gpio port="B" id="1"></gpio>
			<gpio port="B" id="2"></gpio>
			<gpio port="B" id="3"></gpio>
			<gpio port="B" id="4"></gpio>
			<gpio port="B" id="5"></gpio>
			<gpio port="B" id="6"></gpio>
			<gpio port="B" id="7"></gpio>
			
			<gpio port="C" id="0"></gpio>
			<gpio port="C" id="1"></gpio>
			<gpio port="C" id="2"></gpio>
			<gpio port="C" id="3"></gpio>
			<gpio port="C" id="4"></gpio>
			<gpio port="C" id="5"></gpio>
			
			<gpio port="D" id="0"></gpio>
			<gpio port="D" id="1"></gpio>
			<gpio port="D" id="2"></gpio>
			<gpio port="D" id="3"></gpio>
			<gpio port="D" id="4"></gpio>
			<gpio port="D" id="5"></gpio>
			<gpio port="D" id="6"></gpio>
			<gpio port="D" id="7"></gpio>
		</driver>
	</device>
</rca>
