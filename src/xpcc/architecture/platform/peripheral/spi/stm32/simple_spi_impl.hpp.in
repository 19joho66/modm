#ifndef XPCC_STM32_SIMPLE_SPI{{ id }}_HPP
#	error	"Don't include this file directly, use 'simple_spi.hpp' instead!"
#endif

bool xpcc::stm32::SpiSimpleMaster{{ id }}::finished;

// ----------------------------------------------------------------------------
void
xpcc::stm32::SpiSimpleMaster{{ id }}::setDataMode(DataMode mode)
{
	SpiHal{{ id }}::setDataMode(static_cast<SpiHal{{ id }}::DataMode>(mode));
}

void
xpcc::stm32::SpiSimpleMaster{{ id }}::setDataOrder(DataOrder order)
{
	if(order == DataOrder::MsbFirst) {
		SpiHal{{ id }}::setDataOrder(SpiHal{{ id }}::DataOrder::MsbFirst);
	} else {
		SpiHal{{ id }}::setDataOrder(SpiHal{{ id }}::DataOrder::LsbFirst);
	}
}

uint8_t
xpcc::stm32::SpiSimpleMaster{{ id }}::writeReadBlocking(uint8_t data)
{
	writeBlocking(data);
	while(!SpiHal{{ id }}::isReceiveRegisterNotEmpty())
		;
	return getResult();
}

void
xpcc::stm32::SpiSimpleMaster{{ id }}::writeBlocking(uint8_t data)
{
	while(!SpiHal{{ id }}::isTransmitRegisterEmpty())
		;
	SpiHal{{ id }}::write(data);
}

bool
xpcc::stm32::SpiSimpleMaster{{ id }}::write(uint8_t data)
{
	if(SpiHal{{ id }}::isTransmitRegisterEmpty()){
		SpiHal{{ id }}::write(data);
		return true;
	} else {
		return false;
	}
}

uint8_t
xpcc::stm32::SpiSimpleMaster{{ id }}::getResult()
{
	uint8_t data;
	SpiHal{{ id }}::read(data);
	return data;
}

bool
xpcc::stm32::SpiSimpleMaster{{ id }}::transfer(uint8_t * tx, uint8_t * rx,
		std::size_t length)
{
	if (!isFinished())
		return false;

	finished = false;

	uint_fast8_t tx_byte = 0xff;
	uint_fast8_t rx_byte;

	for (std::size_t i = 0; i < length; i++)
	{
		if (tx) tx_byte = tx[i];

		rx_byte = writeReadBlocking(tx_byte);

		if (rx) rx[i] = rx_byte;
	}

	finished = true;
	return true;
}

bool
xpcc::stm32::SpiSimpleMaster{{ id }}::isFinished()
{
	return SpiHal{{ id }}::isTransmitRegisterEmpty() && finished;
}
