#!/usr/bin/env python
#
# $Id$

import os

Import('env')
Import('sourceFiles')
Import('library')

# build a object file form each source file
for file in sourceFiles:
    basename = os.path.basename(file.name)
    name = os.path.splitext(basename) 
    program = env.Program(name[0], file.name, LIBS='robot', LIBPATH='../build/')
    env.Default(program)
